{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/schemas/game.schema.json",
  "title": "Game Metadata",
  "type": "object",
  "required": [
    "id",
    "name",
    "genre",
    "developer",
    "releaseDate",
    "version",
    "description",
    "minPlayers",
    "maxPlayers",
    "assets"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9\\-]+$",
      "description": "Unique lowercase-dash identifier"
    },
    "name": {
      "type": "string",
      "description": "Human-readable game title"
    },
    "genre": {
      "type": "string",
      "description": "Game genre (e.g. First-Person Shooter)"
    },
    "developer": {
      "type": "string",
      "description": "Studio or company that made the game"
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "description": "Official release date (YYYY-MM-DD)"
    },
    "version": {
      "type": "string",
      "description": "Current seed data version or game version"
    },
    "description": {
      "type": "string",
      "description": "Brief synopsis of the game"
    },
    "minPlayers": {
      "type": "integer",
      "minimum": 1,
      "description": "Minimum players in a match"
    },
    "maxPlayers": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum players in a match"
    },
    "assets": {
      "type": "object",
      "required": ["iconUrl", "heroImageUrl"],
      "properties": {
        "iconUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL or path to the game icon"
        },
        "heroImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL or path to the hero/banner image"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
