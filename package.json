{
  "name": "match-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate": "npx tsx scripts/migrate.ts",
    "dev:all": "npm run migrate && npx pm2 start ecosystem.dev.config.js",
    "dev:stop": "npx pm2 stop ecosystem.dev.config.js",
    "dev:restart": "npx pm2 restart ecosystem.dev.config.js",
    "dev:logs": "npx pm2 logs",
    "build:processes": "npx tsx --tsconfig tsconfig.json processes/discord-bot/index.ts && npx tsx --tsconfig tsconfig.json processes/scheduler/index.ts && npx tsx --tsconfig tsconfig.json processes/worker/index.ts",
    "prod:start": "npm run migrate && npx pm2 start ecosystem.config.js",
    "prod:stop": "npx pm2 stop ecosystem.config.js"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "@mantine/core": "^8.2.5",
    "@mantine/dates": "^8.2.5",
    "@mantine/form": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "@mantine/modals": "^8.2.5",
    "@mantine/notifications": "^8.2.5",
    "@tabler/icons-react": "^3.34.1",
    "@types/express": "^5.0.3",
    "@types/node-cron": "^3.0.11",
    "bufferutil": "^4.0.9",
    "discord.js": "^14.21.0",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "node-cron": "^4.2.1",
    "pm2": "^6.0.8",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sqlite3": "^5.1.7",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
